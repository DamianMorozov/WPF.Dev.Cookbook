<Window x:Class="CH02.LabelAccessKeyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Label with an Access Key Demo" Width="400" SizeToContent="Height" WindowStyle="ToolWindow">
    <StackPanel Margin="10 ">
        <Label Content="Enter _user name:" Target="{Binding ElementName=txbUsername}" />
        <TextBox x:Name="txbUsername" Margin="6 0" />
        <Label Content="Enter _password:" Target="{Binding ElementName=txbPassword}" />
        <TextBox x:Name="txbPassword" Margin="6 0" />
    </StackPanel>
</Window>
