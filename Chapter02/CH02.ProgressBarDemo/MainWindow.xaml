<Window x:Class="CH02.ProgressBarDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress Bar Demo" Height="185" Width="350"
        WindowStyle="ToolWindow" ResizeMode="NoResize">
    <StackPanel Margin="5">
        <TextBlock Text="Progress Indicator set at: 20%" Margin="5 5" />
        <ProgressBar Height="20" Margin="5 0" Minimum="0" Maximum="100" Value="20" />
        <TextBlock Text="Progress Indicator set at: 70%" Margin="5 5" />
        <ProgressBar Height="20" Margin="5 0" Minimum="0"  Maximum="100" Value="70" />
        <TextBlock Text="Progress Indicator set at: Indeterminate" Margin="5 5" />
        <ProgressBar Height="20" Margin="5 0" Minimum="0" Maximum="100" IsIndeterminate="True" />
    </StackPanel>
</Window>
