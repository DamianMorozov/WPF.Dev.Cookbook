<Window x:Class="CH02.ImageDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Control Demo" Height="150" SizeToContent="Width" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <StackPanel Orientation="Horizontal">
        <Image Source="demoImage.jpg" Width="100" Height="100" Margin="10" Stretch="None" />
        <Image Source="demoImage.jpg" Width="100" Height="100" Margin="10" Stretch="Fill" />
        <Image Source="demoImage.jpg" Width="100" Height="100" Margin="10" Stretch="Uniform" />
        <Image Source="demoImage.jpg" Width="100" Height="100" Margin="10" Stretch="UniformToFill" />
        <Image Margin="10" >
            <Image.Source>
                <BitmapImage UriSource="demoImage.jpg" Rotation="Rotate90" />
            </Image.Source>
        </Image>
    </StackPanel>
</Window>
